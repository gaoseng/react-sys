{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true,
            "legacyDecorators": true
        }
    },
    "rules": {
        "semi": 2,
        "for-direction":"warn",
        "no-func-assign": "error",
        "func-names":0,
        "max-len": [
            "error",
            150
        ]

    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    }
}
